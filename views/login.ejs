<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Login</title>
    <%- include partials/_head.ejs%>
    <script type="text/javascript" src="/scripts/login.js"></script>

  </head>

  <body class="container">

    <header>
      <%- include partials/_header.ejs%>
    </header>

    <main class="container" id="logincontainer">
      <h3>Login Form</h3>
      <form id="login-form" method="POST" action="/login">
        <div class="form-group">
          <label for="email">Email: </label>
          <input id="email" type="email" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password: </label>
          <input id="password" type="password" name="password" class="form-control">
        </div>
        <button id="loginbut" type="submit"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
        <p>Not registerd? <a href="/register">Create an account</a></p>
      </form>
    </main>

    <footer class="m-4 panel-footer">
      <%- include partials/_footer.ejs%>
    </footer>

    <%- include partials/_foot.ejs%>

    </body>
</html>




