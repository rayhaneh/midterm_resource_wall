<!DOCTYPE html>
<html>

<head>
  <title>Home</title>
  <%- include partials/_head.ejs%>
</head>

<body>

<header>
<%- include partials/_header.ejs%>
</header>
<main class="container">
  <div class="row justify-content-center">
    <%for (let row = 0; row<urls.length; row++){ %>
        <div class="col-lg-3 col-sm-10 urlcontainer">
          <a href="/urls/<%= urls[row].id %>">
            <div class="url-image">
              <img  src="<%=urls[row].image%>">
            </div>
            <div class="url-content">
              <h4><%= urls[row].title%></h4>
              <div>
                 <p><%= urls[row].description.substring(0,200)%> ...</p>
              </div>
              <div class="rating">
                <% for (let i = 0; i < urls[row].overallRating; i++) {%>
                 <span><i class="fa fa-star" aria-hidden="true"></i></span>
                <%}%>
                <% for (let i = 0; i < 5-urls[row].overallRating; i++) {%>
                  <span><i class="fa fa-star-o" aria-hidden="true"></i></span>
                <%}%>
              </div>
            </div>
           </a>
        </div>
    <%}%>
  </div>
</main>



    <footer class="m-4 panel-footer">
      <%- include partials/_footer.ejs%>
    </footer>

  </body>
  <%- include partials/_foot.ejs%>
</html>
